{% extends '::base.html.twig' %}

{% block title %}Inicia sesión - Txikitwo{% endblock %}
{% block stylesheets %}
    {% stylesheets '@WebBundle/Resources/public/css/homepage.css'
        '@WebBundle/Resources/public/css/frontend.css'
        '@UsuarioBundle/Resources/public/css/registro.css'
        output='css/iniciarsesion.css' %}
    <link href="{{ asset_url }}" media="screen" rel="stylesheet" type="text/css" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
   {% include ':includes:header.html.twig' %}
    <div id="contenido">
        <div id="formularioiniciosesion">
            <form action="{{ path('usuario_iniciarsesion') }}" method="post">
                <ul>
                    <li><p>tengo una cuenta</p></li>
                    <li><input type="text" id="email" name="_email" placeholder="Email"/></li>
                    <li><input type="password" id="password" name="_password" placeholder="Contraseña"/></li>
                    <li><input class="boton" type="submit" name="login" value="entrar" /></li>
                    <!-- falta recordar contraseña crear div -->
                </ul>
            </form>
        </div>
        <div id="formularioregistro"> <!-- quitar este form y poner enlace o hacer otro action -->
            <form action="{{ path('usuario_iniciarsesion') }}" method="post" {{ form_enctype(formulario) }}>
                <ul>
                    <li><p>crear una cuenta</p></li>
                    <li>{{ form_widget(formulario.nombre) }}</li>
                    <li>{{ form_widget(formulario.apellido1) }}</li>
                    <li>{{ form_widget(formulario.apellido2) }}</li>
                    <li>{{ form_widget(formulario.email) }}</li>
                    <li>{{ form_widget(formulario.password) }}</li>
                    <li>{{ form_widget(formulario.direccion) }}</li>
                    <li>{{ form_widget(formulario.codigoPostal) }}</li>
                    <li><input class="boton" type="submit" name="registro" value="finalizar" /></li>
                </ul>
            </form>
        </div>
    </div>
    {% include ':includes:footer.html.twig' %}
{% endblock %}